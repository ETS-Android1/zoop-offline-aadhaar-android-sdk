<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                tools:context=".zoopActivity.ZoopKycActivity" android:gravity="top">

    <FrameLayout
            android:id="@+id/zoopFragmentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"/>
    <LinearLayout
            android:id="@+id/zoopInitLoader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@color/zoopWhite"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="@string/loader_wv_init_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:padding="15dp"
                android:gravity="center" android:textSize="@dimen/zoop_heading_text"
                android:textColor="@color/zoopDtPrimaryDark"/>

    </LinearLayout>

</RelativeLayout>