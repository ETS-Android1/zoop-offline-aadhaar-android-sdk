<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    tools:context=".zoopActivity.ZoopKycActivity">

    <ProgressBar
        android:id="@+id/awv_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:visibility="gone" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/awv_progressBar">

        <WebView
            android:id="@+id/wvUidaiOfflineKyc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"></WebView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/llTimerOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/zoopBlack"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/overlayProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/zoop_padding_small_half"
            android:textColor="@color/zoopWhite"
            android:textSize="@dimen/zoop_timer_text" />

        <TextView
            android:id="@+id/tvTimerInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/zoop_padding_small_half"
            android:textColor="@color/zoopWhite"
            android:textSize="@dimen/zoop_normal_text" />

        <LinearLayout
            android:id="@+id/llTimerFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/zoop_padding_small_half"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zoopCancel"
                android:textColor="@color/zoopWhite"
                android:textSize="@dimen/zoop_normal_text" />

            <TextView
                android:id="@+id/tvRetry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zoopRetry"
                android:textColor="@color/zoopWhite"
                android:textSize="@dimen/zoop_normal_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llWebViewLoader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@color/zoopWhite"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvWebviewLoadingMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/zoop_margin"
                android:gravity="center"
                android:padding="@dimen/zoop_padding"
                android:text="@string/loaderMsg"
                android:textColor="@color/zoopDtPrimaryDark"
                android:textSize="@dimen/zoop_heading_text" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/assistiveCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/zoop_margin_very_small"
            android:visibility="visible"
            android:background="@android:color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@color/zoopWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llInputView"
                    android:layout_width="match_parent"
                    android:weightSum="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/etInputData"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:padding="@dimen/zoop_padding_small_half"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivSubmitData"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.2"
                        android:padding="@dimen/zoop_padding_small_half"
                        app:srcCompat="@mipmap/ic_arrow" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>